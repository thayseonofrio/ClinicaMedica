@model clinicamedica.Models.Paciente

@{
    ViewBag.Title = "Excluir";
}

<h2>Excluir dados do paciente @Model.Nome</h2>

<h3>Tem certeza que quer excluir este usuário?</h3>
<div>
    <h4>Paciente</h4>
    <hr />
    <dl class="dl-horizontal">
        

        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nascimento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nascimento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Endereco)
        </dd>
        @if (User.IsInRole("Medico"))
        {
            <dt>
                @Html.DisplayNameFor(model => model.Observacao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Observacao)
            </dd>
        }

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> 
            <ul class="nav nav-tabs nav-justified">
                <li>@Html.ActionLink("Todos Pacientes", "Index")</li>
            </ul>
        </div>
    }
</div>
