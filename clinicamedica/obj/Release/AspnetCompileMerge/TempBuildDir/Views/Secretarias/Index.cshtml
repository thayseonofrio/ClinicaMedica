@model IEnumerable<clinicamedica.Models.Secretaria>

@{
    ViewBag.Title = "Secretárias";
}

<h2>Secretárias</h2>

<p>
    @if(User.IsInRole("Admin")) { 
        @Html.ActionLink("Inserir Secretária", "Create", null, new { @class = "pull-right" })
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        
        <td>
           
            <a href="@Url.Action("Edit", new { id = item.IDSecretaria })"> <span class="glyphicon glyphicon-pencil" data-toggle="tooltip" data-placement="top" title="Editar" aria-hidden="true"></span>  </a>
           
            <a href="@Url.Action("Details", new { id = item.IDSecretaria })"> <span class="glyphicon glyphicon-zoom-in" data-toggle="tooltip" data-placement="top" title="Detalhes" aria-hidden="true"></span>  </a>
            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("Delete", new { id = item.IDSecretaria })"> <span class="glyphicon glyphicon-remove" data-toggle="tooltip" data-placement="top" title="Excluir" aria-hidden="true"></span>  </a>
            }
            
        </td>
    </tr>
}

</table>
